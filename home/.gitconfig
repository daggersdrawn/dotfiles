[user]
    name = Thomas Schreiber
    email = tom@rizu.fake

[github]
    user = rizumu

[core]
    editor = emacs --no-window-system --quick
    excludesfile = ~/.gitignore
    filemode = true
    logallrefupdates = true
    whitespace = space-before-tab, trailing-space

[alias]
    ediff = difftool -t ediff
    wip = !git add -u && git commit -m ...
    wipc = !date >> WIP && git add WIP && git commit -m ...

[help]
    browser = open
    autocorrect = 1

[branch]
    autosetupmerge = true

[diff]
    renames = true
    mnemonicprefix = true

[difftool "ediff"]
    cmd = ~/bin/ediff \"$LOCAL\" \"$REMOTE\"

[merge]
    tool = p4merge
    renamelimit = 10000

[mergetool "p4merge"]
    cmd = p4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
    trustExitCode = false

[status]
    submodule = 1

[push]
    default = upstream

[sendemail]
    smtpserver = smtp.gmail.com
    smtpserverport = 587
    smtpencryption = tls
    smtpuser = funkshun@gmail.com

[apply]
    whitespace = warn

[color]
    ui = auto

[color "diff"]
    meta = blue bold
    frag = magenta bold
    old = red bold

[color "branch"]
    current = yellow reverse
    local = yellow bold
    remote = green bold
    plain = red bold

[color "status"]
    added = yellow
    changed = green bold
    untracked = blue bold
